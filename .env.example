# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_companions_watch

# Redis (optional - enables queue mode for background processing)
# Comment out to use direct/sync mode (recommended for Vercel)
# REDIS_URL=redis://localhost:6379

# LLM Provider
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Security
INGEST_SECRET=change-this-to-a-secure-random-string

# Clustering Configuration
CLUSTER_SIMILARITY_THRESHOLD=0.4
CLUSTER_TRGM_THRESHOLD=0.2
CLUSTER_ACTIVE_DAYS=7

# Ranking Configuration
RANKING_MAX_DOMAINS=6
RANKING_RECENCY_DECAY_HOURS=24

# Direct Mode Settings (Vercel)
DIRECT_MODE_MAX_ITEMS=30
DIRECT_MODE_TIMEOUT_MS=55000
DIRECT_MODE_LLM_CONCURRENCY=3
